<% include header %>

    <main role="main">
        <section class="jumbotron text-center mb-0">
            <div class="container">
                <h1 class="jumbotron-heading">
                    One-stop for Hipster Fashion &amp; Style Online
                </h1>
                <p class="lead text-muted">
                    Tired of mainstream fashion ideas, popular trends and
                    societal norms? This line of lifestyle products will help
                    you catch up with the hipster trend and express your
                    personal style. Start shopping hip and vintage items now!
                </p>
            </div>
        </section>

        <div class="py-5 bg-light">
            <div class="container">
            <div class="row">
                <% if(!products.length) { %>
                    <h3>Goods not delivered yet</h3>
                <% } else { %>
                <% products.forEach(function(p) { %>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <a href="/product/<%= p.id %>">
                            <img class="card-img-top" alt =""
                                style="width: 100%; height: auto;"
                                src="<%= p.photo %>">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= p.name %>
                            </h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/product/<%= p.id %>">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Buy</button>
                                    </a>
                                </div>
                                <small class="text-muted">
                                    <%= p.price %>â‚´
                                </strong>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) } %>
            </div>
            <div class="row">
            </div>
            </div>
        </div>
    </main>

    

<% include footer %>